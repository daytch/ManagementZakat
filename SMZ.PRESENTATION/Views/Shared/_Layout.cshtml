<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title Management Qurban - Masjid Al Ittihad</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/datatable")
    @Styles.Render("~/Content/sweetalert2")
    @Styles.Render("~/Content/jquery-ui")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div id="dloader">
        <div class="pwait bg-white hidden-print" style="width:120px;text-align:center"><h4>Please Wait..</h4><img src="~/Content/images/loading.gif"></div>
    </div>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Management Qurban", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav navbar-left">
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Master Data<b class="caret"></b></a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Pengqurban", "Index", "Customer")</li>
                            <li>@Html.ActionLink("Vendor", "Index", "Vendor")</li>
                        </ul>
                    </li>
                    <li>@Html.ActionLink("Laporan", "Index", "Report")</li>
                    <li>@Html.ActionLink("Transaksi", "Index", "Transaksi")</li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Master Data<b class="caret"></b></a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("User", "Index", "User")</li>
                            <li>@Html.ActionLink("Logout", "Index", null, null, new { onclick = "Logout()" })</li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        <br />
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Masjid Al Ittihad</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @*@Scripts.Render("~/bundles/jquery.datatable")*@
    <script src="//cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>
    @Scripts.Render("~/bundles/datatable")
    @Scripts.Render("~/bundles/sweetalert2")
    @Scripts.Render("~/bundles/constant")
    @Scripts.Render("~/bundles/hijri")
    @Scripts.Render("~/bundles/moment")
    @Scripts.Render("~/bundles/typeahead")
    @Scripts.Render("~/bundles/common")
    @Scripts.Render("~/bundles/jquery-ui")
    @RenderSection("scripts", required: false)
</body>
</html>
